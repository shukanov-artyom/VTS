<UserControl
    x:Class="Agent.Common.Presentation.Network.NoConnectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localization="clr-namespace:Agent.Localization;assembly=Agent.Localization">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel
            HorizontalAlignment="Center"
            Grid.Row="0"
            Orientation="Horizontal">
            <Image
                Height="50"
                Source="emoticon_sad.png"/>
            <TextBlock 
                VerticalAlignment="Center"
                Margin="15,0,0,0"
                FontWeight="Bold"
                FontSize="16"
                Text="{localization:TranslateExtension 
                    Key=NoNetworkHeader}"/>
        </StackPanel>
        
        <TextBlock
            Grid.Row="1"
            Margin="15"
            TextWrapping="Wrap"
            Text="{localization:TranslateExtension
                NoConnectionExplanatoryText}"/>

        <Button
            Grid.Row="2"
            Height="23"
            Width="70"
            Margin="7"
            Content="OK"
            Click="OnOkClicked"/>
    </Grid>
</UserControl>
