<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="EventParameterButtonStyle"
        TargetType="Button">
        <Setter
            Property="Height"
            Value="14">
        </Setter>
        <Setter
            Property="Width"
            Value="25">
        </Setter>
        <Setter 
            Property="Margin" 
            Value="1">
        </Setter>
        <Setter 
            Property="Background" 
            Value="{Binding Path=Color}">
        </Setter>
    </Style>
</ResourceDictionary>