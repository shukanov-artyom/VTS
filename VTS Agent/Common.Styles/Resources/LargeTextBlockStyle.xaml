<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="LargeTextBlockStyle"
        TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="25"/>
        <Setter 
            Property="Margin"
            Value="7" />
        <Setter 
            Property="Padding"
            Value="3" />
    </Style>
</ResourceDictionary>