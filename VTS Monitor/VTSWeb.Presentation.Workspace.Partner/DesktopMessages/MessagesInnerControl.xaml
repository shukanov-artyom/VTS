<UserControl
    x:Class="VTSWeb.Presentation.Workspace.Partner.DesktopMessages.MessagesInnerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localization="clr-namespace:VTSWeb.Localization;assembly=VTSWeb.Localization">

    <Grid
        MinHeight="120"
        Width="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="textBlockMessageText"
            Margin="6"
            FontSize="14"
            Grid.Row="0"
            TextWrapping="Wrap"
            Text="{localization:TranslateExtension Key=DesktopMessagesLoadingMessageText}"/>
        <StackPanel
                Orientation="Horizontal"
                Grid.Row="2">
            <StackPanel
                Orientation="Horizontal"
                Margin="20,0,20,0"
                x:Name="stackPanelMessageItems">
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
