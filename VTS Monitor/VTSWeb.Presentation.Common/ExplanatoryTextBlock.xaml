<UserControl 
    x:Class="VTSWeb.Presentation.Common.ExplanatoryTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid 
        x:Name="LayoutRoot"
        MouseEnter="OnGridMouseEnter"
        MouseLeave="OnGridMouseLeave">
        <Grid
            x:Name="gridMainText">
            <TextBlock
                x:Name="textBlockMainText"
                FontSize="18"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold">
            </TextBlock>
        </Grid>
        
        <Grid
            x:Name="gridExplanatoryText">
            <TextBlock
                VerticalAlignment="Center"
                Visibility="Collapsed"
                TextWrapping="Wrap"
                FontSize="12"
                x:Name="textBlockExplanatoryText">
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
