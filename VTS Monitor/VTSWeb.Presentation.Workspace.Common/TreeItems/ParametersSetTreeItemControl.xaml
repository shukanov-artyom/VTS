<UserControl
    x:Class="VTSWeb.Presentation.Workspace.Common.TreeItems.ParametersSetTreeItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="LayoutRoot">
        
        <StackPanel
            Orientation="Horizontal">
            <CheckBox
                IsChecked="{Binding Path=IsSelectedForExport, 
                    Mode=TwoWay}"
                VerticalAlignment="Center"
                Margin="0,0,5,0">
            </CheckBox>
            <TextBlock
                FontSize="12"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="1"
                Text="{Binding Path=Type.Name}">
            </TextBlock>
        </StackPanel>
        
    </Grid>
</UserControl>
